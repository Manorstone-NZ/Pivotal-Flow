# Root Environment Example for Pivotal Flow
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Auth
JWT_SECRET=change-me
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
COOKIE_SECRET=change-me
COOKIE_SECURE=false

# CORS
CORS_ORIGIN=http://localhost:5173

# Data Sources
DATABASE_URL=postgresql://pivotal:pivotal@postgres:5433/pivotal
REDIS_URL=redis://redis:6379

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_UNAUTH_MAX=100
RATE_LIMIT_AUTH_MAX=1000
RATE_LIMIT_ADMIN_MAX=5000
RATE_LIMIT_LOGIN_MAX=10

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
