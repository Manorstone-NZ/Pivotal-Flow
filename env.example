# PostgreSQL Configuration
POSTGRES_USER=pivotal
POSTGRES_PASSWORD=pivotal
POSTGRES_DB=pivotal
POSTGRES_PORT=5433
POSTGRES_HOST=localhost

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Metrics and Observability
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_PATH=/metrics

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
LOG_PRETTY=true

# Database Connection (for future backend)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Connection (for future backend)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-is-at-least-32-characters-long
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-that-is-at-least-32-characters-long
COOKIE_SECURE=false

# API Configuration
API_PORT=3000
API_HOST=localhost
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Frontend Configuration (for future frontend)
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=Pivotal Flow
