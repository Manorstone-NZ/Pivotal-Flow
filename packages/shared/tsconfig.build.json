{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/bcrypt.ts",
    "src/db/repo.payments.ts", 
    "src/db/repo.base.ts", 
    "src/schema.ts", 
    "src/metrics/index.ts",
    "src/pricing/**/*",
    "src/security/**/*"
  ],
  "exclude": [
    "src/db/repo.audit.ts",
    "src/db/repo.users.ts", 
    "src/db/repo.org-settings.ts",
    "src/db/repo.util.ts",
    "src/db/withTx.ts",
    "src/prisma.ts", 
    "src/**/*.test.ts", 
    "src/**/__tests__/**/*"
  ]
}
