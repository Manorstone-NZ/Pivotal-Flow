{
  "name": "@pivotal-flow/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for Pivotal Flow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./security/password": {
      "import": "./dist/security/password.js",
      "types": "./dist/security/password.d.ts"
    },
    "./security/jwt-types": {
      "import": "./dist/security/jwt-types.js",
      "types": "./dist/security/jwt-types.d.ts"
    },
    "./tenancy/guard": {
      "import": "./dist/tenancy/guard.js",
      "types": "./dist/tenancy/guard.d.ts"
    },
    "./types/user": {
      "import": "./dist/types/user.js",
      "types": "./dist/types/user.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "argon2": "^0.40.0",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}