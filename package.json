{
  "name": "pivotal-flow",
  "version": "0.1.0",
  "description": "Pivotal Flow - Business Management Platform",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:coverage": "pnpm --recursive test:coverage",
    "test:ci": "pnpm --recursive test:ci",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "format": "pnpm --recursive format",
    "format:check": "pnpm --recursive format:check",
    "clean": "pnpm --recursive clean",
    "ci:coverage": "node scripts/ci/ci-coverage-report.js",
    "ci:security": "node scripts/ci/security-quality-check.js",
    "ci:full": "pnpm test:ci && pnpm ci:coverage && pnpm ci:security",
    "ci:comprehensive": "node scripts/ci/comprehensive-test-runner.js",
    "docker:up": "./scripts/docker/up.sh",
    "docker:down": "./scripts/docker/down.sh",
    "docker:logs": "./scripts/docker/logs.sh",
    "db:drop:nonprod:dry": "DB_DRY_RUN=yes REQUIRE_EXPLICIT_CONFIRM=YES bash scripts/db/drop_non_prod_dbs.sh",
    "db:drop:nonprod": "DB_DRY_RUN=no REQUIRE_EXPLICIT_CONFIRM=YES bash scripts/db/drop_non_prod_dbs.sh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}