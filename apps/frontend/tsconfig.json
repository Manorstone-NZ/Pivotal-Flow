{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "tests/e2e/**",
    "playwright.config.ts"
  ]
}
