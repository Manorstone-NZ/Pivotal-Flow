{
  "name": "@pivotal-flow/backend",
  "version": "0.1.0",
  "description": "Pivotal Flow Backend API",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "tsx scripts/test-runner.ts unit",
    "test:integration": "tsx scripts/test-runner.ts integration",
    "test:e2e": "tsx scripts/test-runner.ts e2e",
    "test:all": "tsx scripts/test-runner.ts all",
    "test:ci": "vitest run --coverage --reporter=json",
    "test:simple": "tsx scripts/simple-test-runner.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "bash ../../scripts/db/guard_migrations.sh drizzle-kit migrate",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:push": "bash ../../scripts/db/guard_migrations.sh drizzle-kit push",
    "db:migrate:ci": "drizzle-kit migrate",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:reset": "tsx scripts/seed.ts --reset",
    "openapi:smoke": "curl -f http://localhost:3000/api/openapi.json | jq . > /dev/null && echo 'OpenAPI JSON endpoint working' || echo 'OpenAPI JSON endpoint failed'"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/swagger": "8.15.0",
    "@fastify/swagger-ui": "4.2.0",
    "@pivotal-flow/shared": "workspace:^",
    "@types/jsonwebtoken": "^9.0.10",
    "argon2": "^0.40",
    "decimal.js": "^10.4.3",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.2.3",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.0",
    "redis": "^5.8.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.55.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}